<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FDF6F6"
    tools:context=".Start.LoginActivity">


   <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/screen_designs1" />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:text="Chào mừng trở lại!"
               android:textColor="#000000"
               android:textSize="36dp"
               android:textStyle="bold" />

           <ImageView
               android:layout_marginTop="5dp"
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:gravity="center"
               android:src="@drawable/scremm_login" />

           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/emaillogTil"
               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="20dp"
               android:layout_marginTop="10dp"
               android:layout_marginEnd="20dp"
               android:hint="Nhập email của bạn">

               <com.google.android.material.textfield.TextInputEditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />

           </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/passwordlogIlt"
               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="20dp"
               android:layout_marginTop="10dp"
               android:layout_marginEnd="20dp"
               android:hint="Nhập mật khẩu cảu bạn"
               app:passwordToggleEnabled="true">

               <com.google.android.material.textfield.TextInputEditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />

           </com.google.android.material.textfield.TextInputLayout>

           <TextView
               android:id="@+id/fPasswordTv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal|bottom"
               android:layout_marginTop="80dp"
               android:padding="10dp"
               android:text="@string/fpass"
               android:textColor="@color/black" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:gravity="center">

               <Button
                   android:id="@+id/LoginBtn"
                   android:layout_width="250dp"
                   android:layout_height="80dp"
                   android:layout_marginStart="20dp"
                   android:layout_marginEnd="20dp"
                   android:backgroundTint="@color/pigg"
                   android:text="Đăng Nhập"
                   android:textColor="@color/black"
                   android:textSize="25dp" />
           </LinearLayout>
           <Space
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1" />
           <TextView
               android:id="@+id/AccountTv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal|bottom"
               android:padding="10dp"
               android:text="@string/new_user_signup"
               android:textColor="@color/black" />
       </LinearLayout>
   </ScrollView>


</RelativeLayout>
